<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar">
    </include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/FreakingMath"
        android:visibility="gone">

        <vlth.brainbreak.Library.NumberProgressBar
            android:id="@+id/proTimer"
            style="@style/NumberProgressBar_Default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dip">

            <TextView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:id="@+id/num1"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_toLeftOf="@+id/im3"
                android:layout_toStartOf="@+id/im3"
                android:clickable="false"
                android:textColor="#5b3716"
                android:layout_weight="1"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:id="@+id/math"
                android:textSize="@android:dimen/app_icon_size"
                android:layout_alignTop="@+id/im1"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:textColor="#5b3716"
                android:layout_weight="1"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:id="@+id/num2"
                android:textSize="@android:dimen/app_icon_size"
                android:clickable="false"
                android:textColor="#5b3716"
                android:layout_weight="1"
                android:textAlignment="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="100dip"
            android:layout_height="70dip"
            android:id="@+id/ans"
            android:clickable="false"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="#5b3716"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dip">

            <ImageButton
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/btn1"
                android:background="@drawable/bt_corner"
                android:layout_weight="1"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_tick"
                />

            <ImageButton
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginLeft="25dip"
                android:id="@+id/btn2"
                android:background="@drawable/bt_corner"
                android:layout_weight="1"
                android:soundEffectsEnabled="true"
                android:src="@drawable/ic_x"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Point: "
                android:textSize="20dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/point"
                android:textSize="20dip"/>
        </LinearLayout>

    </LinearLayout>
    <ImageButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_play2"
        />
</FrameLayout>
